{
  "manifest_version": 3,
  "name": "YoBuddy Shopping",
  "version": "2.0",
  "description": "Complete collaborative shopping platform",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "activeTab",
    "contextMenus",
    "desktopCapture",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.ebay.com/*",
    "*://*.walmart.com/*",
    "*://*.bestbuy.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "features/voice-chat.js",
      "features/screen-recorder.js",
      "features/deal-finder.js",
      "features/product-comparison.js",
      "features/cursor-sharing.js",
      "features/price-tracker.js",
      "content.js"
    ],
    "css": ["styles/main.css"]
  }],
  "web_accessible_resources": [{
    "resources": ["features/*"],
    "matches": ["<all_urls>"]
  }]
}