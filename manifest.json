{
  "manifest_version": 3,
  "name": "YoBuddy Shopping",
  "version": "2.0",
  "description": "Complete social shopping platform with session recording",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [{
    "resources": ["features/session-recorder.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "content.js",
      "features/session-recorder.js"
    ],
    "css": ["styles/main.css"]
  }]
}