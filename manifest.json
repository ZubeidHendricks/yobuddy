{
  "manifest_version": 3,
  "name": "YoBuddy",
  "version": "1.0.0",
  "description": "A Chrome extension for synchronized browsing and shopping with friends",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": [
      "js/VoiceChat.js",
      "js/CommunicationHub.js",
      "js/PaymentManager.js",
      "js/SocialFeatures.js",
      "js/AnalyticsTracker.js",
      "js/AdminDashboard.js",
      "content.js"
    ],
    "css": ["css/styles.css"]
  }],
  "background": {
    "service_worker": "background.js"
  }
}